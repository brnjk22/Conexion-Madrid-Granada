    vlan-id 10
    ip address 192.168.10.10/24

interface eth1.20
    vlan-id 20
    ip address 192.168.20.10/24

interface eth1.30
    vlan-id 30
    ip address 192.168.30.10/24

interface eth1.40
    vlan-id 40
    ip address 192.168.40.10/24

interface eth1.50
    vlan-id 50
    ip address 192.168.50.10/24

interface eth1.60
    vlan-id 60
    ip address 192.168.60.10/24

#Interfaz conectada a L1

interface eth3.10
    vlan-id 10
    ip address 192.168.10.10/24

interface eth3.20
    vlan-id 20
    ip address 192.168.20.10/24

interface eth3.30
    vlan-id 30
    ip address 192.168.30.10/24

interface eth3.40
    vlan-id 40
    ip address 192.168.40.10/24

interface eth3.50
