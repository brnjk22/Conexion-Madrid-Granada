# Configuración de políticas de firewall para las VLANs

# Permitir tráfico de gestión (VLAN 10) hacia todos los dispositivos
config firewall policy
    edit 1
    set srcintf "vlan10"
    set dstintf "any"
    set srcaddr "all"
    set dstaddr "all"
    set action accept
    set schedule "always"
    set service "ALL"
    set logtraffic all
next

# Permitir tráfico entre servidores (VLAN 20) y usuarios corporativos (VLAN 30)
edit 2
    set srcintf "vlan20"
    set dstintf "vlan30"
    set srcaddr "all"
    set dstaddr "all"
    set action accept
    set schedule "always"
    set service "ALL"
    set logtraffic all
next

# Permitir tráfico de impresoras (VLAN 40) hacia usuarios corporativos (VLAN 30)
edit 3
    set srcintf "vlan40"
    set dstintf "vlan30"
    set srcaddr "all"
    set dstaddr "all"
    set action accept
    set schedule "always"
    set service "ALL"
    set logtraffic all
next

# Permitir tráfico de usuarios IT (VLAN 50) hacia todos los dispositivos
edit 4
    set srcintf "vlan50"
    set dstintf "any"
    set srcaddr "all"
    set dstaddr "all"
    set action accept
    set schedule "always"
    set service "ALL"
    set logtraffic all
next

# Bloquear cualquier otro tráfico entre VLANs
edit 5
    set srcintf "any"
    set dstintf "any"
    set srcaddr "all"
    set dstaddr "all"
    set action deny
    set schedule "always"
    set service "ALL"
    set logtraffic all
next

edit 6
    set srcintf "any"
    set dstintf "wan"
    set srcaddr "all"
    set dstaddr "all"
    set action accept
    set nat enable
    set schedule "always"
    set service "ALL"
    set logtraffic all
next

end